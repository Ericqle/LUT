<Lut>:
    pam1: pam1
    pam2: pam2
    a: a
    b: b
    c: c
    calc: calc
    scale: scale
    lut_text: lut_text
    lut_script_progress_bar: lut_script_progress_bar
    lut_script_log_label: lut_script_log_label

    BoxLayout:
        canvas.before:
            Color:
                rgb: 245/255, 245/255, 245/255, 1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        padding: 5
        spacing: 5

        BoxLayout:
            canvas.before:
                Color:
                    rgb: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            orientation: 'horizontal'
            size_hint: 1, .35
            padding: 5
            spacing: 5

            BoxLayout:
                padding: 5
                spacing: 5
                orientation: 'vertical'
                Label:
                    canvas.before:
                        Color:
                            rgb: 240/255, 240/255, 240/255, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    text: 'PAM Inner Binary Weights'
                BoxLayout:
                    size_hint: .7, 1
                    pos_hint: {'x': .25}
                    orientation: 'horizontal'
                    spacing: 5
                    Label:
                        text: '1: '
                    TextInput:
                        write_tab: False
                        multiline: False
                        id: pam1
                    Label:
                        text: '2: '
                    TextInput:
                        write_tab: False
                        multiline: False
                        id: pam2
            BoxLayout:
                padding: 5
                spacing: 5
                orientation: 'vertical'
                Label:
                    canvas.before:
                        Color:
                            rgb: 240/255, 240/255, 240/255, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    text: 'Coefficients'
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 5
                    Label:
                        text: 'A: '
                    TextInput:
                        write_tab: False
                        multiline: False
                        id: a
                    Label:
                        text: 'B: '
                    TextInput:
                        write_tab: False
                        multiline: False
                        id: b
                    Label:
                        text: 'C: '
                    TextInput:
                        write_tab: False
                        multiline: False
                        id: c

            BoxLayout:
                padding: 5
                spacing: 5
                orientation: 'vertical'
                Label:
                    canvas.before:
                        Color:
                            rgb: 240/255, 240/255, 240/255, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    text: 'Scale Factor'
                BoxLayout:
                    size_hint: .5, 1
                    pos_hint: {'x': .25}
                    orientation: 'horizontal'
                    spacing: 5
                    Label:
                        text: '(0 to 1): '
                    TextInput:
                        write_tab: False
                        multiline: False
                        size_hint: .3, 1
                        id: scale
                        text: ''

        BoxLayout:
            padding: 5
            spacing: 5
            size_hint: 1, .175
            orientation: 'horizontal'

            Button:
                id: calc
                text: "Calc Look up Table"
                on_press:
                    root.get_lut()

            Button:
                text: "Write"
                on_press:
                    root.write(start_address.text, root.script_values)

            Label:
                size_hint: .75, 1
                text: "LSB Address:"
            TextInput:
                write_tab: False
                multiline: False
                size_hint: .75, 1
                id: start_address
                text: '0x018e'

        Label:
            id: lut_script_log_label
            size_hint: 1, .1
            text: ''

        ScrollView:
            id: scroller
            bar_width: 25
            effect_cls: "ScrollEffect"
            scroll_type: ['bars']
            TextInput:
                write_tab: False
                id: lut_text
                size_hint_y: None
                height: max(self.minimum_height, scroller.height)

        ProgressBar:
            id: lut_script_progress_bar
            size_hint: 1, .1
            max: 1000

<ErrorPopup@Popup>:
    title: "Error"
    text: ''
    size_hint: .6, .6
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        Label:
            font_size: '16sp'
            text: root.text
        Button:
            text: 'Okay'
            on_release: root.dismiss()
            size_hint: 1, .50